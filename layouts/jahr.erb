<% @config[:years].each do |y| %>
  <% c = y == @year ? "class=\"active\"" : "" %>
  <%= "<a #{c} href=\"/aktuelles/#{y}\">#{y}</a>&nbsp;" %>
<% end %>

<h4>Jahr <%= @year %></h4>

<% news = @config[:news].select { |i| i[:date].year == @year } %>

<% news.each do |i| %>
  <%= render "news_item", item: i %>
<% end %>

